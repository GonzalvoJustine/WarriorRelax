{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Titre de la catégorie : {{ category.title }}</h1>

    {% for exercise in exercises %}

        <a href="{{ path('exercise_show',{'id':exercise.id}) }}">
            <img src="{{ exercise.image }}" alt="exercice" width="300" height="300">
            {{ exercise.title }}
        </a>

    {% else %}
        <p>Page non trouvée</p>
    {% endfor %}

{% endblock %}
