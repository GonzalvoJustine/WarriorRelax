            </div>

            <div class="col-12">
                <div class="blockOne">
                    <h2>Description :</h2>
                    <div class="content">
                        <p>{{ exercise.description }}</p>
                    </div>
                </div>
                <div class="blockTwo">
                    <h2>Indication :</h2>
                    <p>{{ exercise.indication }}</p>
                </div>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                {#<a href="{{ path('exercise_edit', {'id': exercise.id}) }}">edit</a>#}

                {{ include('exercise/_delete_form.html.twig') }}
            {% endif %}

        </div>
    </div>

    <div id="launch" class="bg-secondary">
        <div class="link">
            <a href="{{ path('session_index') }}" class="text-white">
                <i class="fab fa-ello"></i>
                Ma séance
            </a>
        </div>
        <div class="link">
            <div class="content">
                {% if cart.items.count > 0 %}
                    {{ cart.total }}
                {% else %}
                    0
                {% endif %}
            </div>
            Exercices
        </div>
        <div class="link">
            <div class="content">
                {% if cart.items.count > 0 %}
                    {{ cart.time }}
                {% else %}
                    0
                {% endif %}
            </div>
            Temps
        </div>
    </div>

{% endblock %}
