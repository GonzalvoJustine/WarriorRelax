                </form>#}
                {#<button type="button" class="btn btn-white" data-bs-toggle="modal" data-bs-target="#addExercice">
                    Ajouter un exercice
                    <i class="fas fa-plus-circle"></i>
                </button>#}

                <!-- Modal -->
                {#<div class="modal fade" id="addExercice" tabindex="-1" aria-labelledby="addExerciceLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addExerciceLabel">Exercices</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
