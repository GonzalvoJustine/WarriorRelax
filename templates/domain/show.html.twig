{% extends 'base.html.twig' %}

{% block title %}Domain{% endblock %}

{% block body %}

    <h1 class="bandeau">{{ domain.title }}</h1>

    <div class="container">
        <div class="row">
            <div class="col-12">
                {% for category in categories %}

                    <a href="{{ path('category_show', {'id': category.id}) }}">
                        <img src="{{ category.image }}" alt="séances" width="300" height="300">
                        {{ category.title }}
                    </a>

                {% else %}
                    <p>Page non trouvée</p>
                {% endfor %}

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('domain_edit', {'id': domain.id}) }}">edit</a>

                    {{ include('domain/_delete_form.html.twig') }}
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}
